<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6630898560544189/8276154154" />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_below="@id/adView"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="#FAFAFA"
        android:background="@drawable/avl_background"
        style="@style/AVLoadingIndicatorView.LargeMe"
        app:indicatorName="LineScaleIndicator" />

    <ImageView
        android:id="@+id/main_control_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_start_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_height="90dp" />

    <ImageView
        android:id="@+id/main_choose_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_mode_button"
        android:layout_above="@id/main_control_button"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/main_mode_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_above="@id/main_choose_button"
        android:textSize="20sp"
        android:textColor="#FAFAFA"
        android:text="@string/one_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_close_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="6dp"
        android:src="@drawable/close_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/main_menu_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="6dp"
        android:src="@drawable/main_menu_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>



